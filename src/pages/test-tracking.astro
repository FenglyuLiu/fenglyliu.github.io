---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="追踪测试 - Portfolio" description="测试访问者追踪功能">
  <div class="py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          追踪功能测试
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          这个页面用于测试访问者追踪功能是否正常工作
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- 测试按钮 -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
            交互测试
          </h2>
          <div class="space-y-4">
            <button 
              id="test-button-1"
              class="w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors"
            >
              测试按钮 1
            </button>
            <button 
              id="test-button-2"
              class="w-full bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition-colors"
            >
              测试按钮 2
            </button>
            <button 
              id="test-button-3"
              class="w-full bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg transition-colors"
            >
              测试按钮 3
            </button>
          </div>
        </div>

        <!-- 追踪状态 -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
            追踪状态
          </h2>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">追踪状态：</span>
              <span id="tracking-status" class="text-green-600 dark:text-green-400 font-medium">启用</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">会话 ID：</span>
              <span id="session-id" class="text-blue-600 dark:text-blue-400 font-mono text-sm">-</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">用户 ID：</span>
              <span id="user-id" class="text-blue-600 dark:text-blue-400 font-mono text-sm">-</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">页面停留时间：</span>
              <span id="time-on-page" class="text-purple-600 dark:text-purple-400 font-medium">0秒</span>
            </div>
          </div>
        </div>
      </div>

      <!-- 实时数据 -->
      <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
          实时追踪数据
        </h2>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
          <pre id="tracking-data" class="text-sm text-gray-800 dark:text-gray-200 overflow-auto max-h-64">
            加载中...
          </pre>
        </div>
        <div class="mt-4 flex space-x-4">
          <button 
            onclick="refreshTrackingData()" 
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors"
          >
            刷新数据
          </button>
          <button 
            onclick="clearTrackingData()" 
            class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors"
          >
            清除数据
          </button>
        </div>
      </div>

      <!-- 导航测试 -->
      <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
          页面导航测试
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          点击下面的链接测试页面访问追踪：
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors">
            首页
          </a>
          <a href="/projects" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors">
            项目
          </a>
          <a href="/photography" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors">
            摄影
          </a>
          <a href="/analytics" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors">
            分析页面
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // 更新追踪状态显示
  function updateTrackingStatus() {
    const trackingData = localStorage.getItem('tracking_data');
    const consent = localStorage.getItem('tracking_consent');
    
    // 更新状态
    document.getElementById('tracking-status').textContent = 
      consent === 'declined' ? '禁用' : '启用';
    document.getElementById('tracking-status').className = 
      consent === 'declined' ? 'text-red-600 dark:text-red-400 font-medium' : 'text-green-600 dark:text-green-400 font-medium';
    
    // 更新会话和用户ID
    if (window.visitorData) {
      document.getElementById('session-id').textContent = window.visitorData.sessionId;
      document.getElementById('user-id').textContent = window.visitorData.userId;
    }
    
    // 更新页面停留时间
    let timeOnPage = 0;
    if (window.visitorData && window.visitorData.pages.length > 0) {
      const currentPage = window.visitorData.pages[window.visitorData.pages.length - 1];
      timeOnPage = currentPage ? currentPage.timeOnPage : 0;
    }
    document.getElementById('time-on-page').textContent = `${timeOnPage}秒`;
    
    // 更新追踪数据
    if (trackingData) {
      const data = JSON.parse(trackingData);
      document.getElementById('tracking-data').textContent = 
        JSON.stringify(data.slice(-10), null, 2); // 显示最近10条记录
    } else {
      document.getElementById('tracking-data').textContent = '暂无追踪数据';
    }
  }

  // 刷新追踪数据
  function refreshTrackingData() {
    updateTrackingStatus();
  }

  // 清除追踪数据
  function clearTrackingData() {
    if (confirm('确定要清除所有追踪数据吗？')) {
      localStorage.removeItem('tracking_data');
      localStorage.removeItem('visitor_analytics');
      updateTrackingStatus();
      alert('追踪数据已清除');
    }
  }

  // 添加测试按钮事件
  document.addEventListener('DOMContentLoaded', function() {
    // 更新状态显示
    updateTrackingStatus();
    
    // 每5秒更新一次状态
    setInterval(updateTrackingStatus, 5000);
    
    // 添加测试按钮点击事件
    ['test-button-1', 'test-button-2', 'test-button-3'].forEach(id => {
      const button = document.getElementById(id);
      if (button) {
        button.addEventListener('click', function() {
          console.log(`测试按钮 ${id} 被点击`);
          alert(`测试按钮 ${id} 被点击！检查控制台和追踪数据。`);
        });
      }
    });
  });
</script>
