---
import BaseLayout from '../layouts/BaseLayout.astro'
---
<BaseLayout title="Contact" description="Get in touch">
<section class="py-10 prose dark:prose-invert max-w-4xl">
<h1 class="text-3xl font-semibold tracking-tight">Contact</h1>

<div class="flex justify-center mt-8">
  <div class="space-y-6">
      <!-- 邮箱联系 -->
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <a href="mailto:liufenglyu@gmail.com" class="text-blue-600 dark:text-blue-400 hover:underline">liufenglyu@gmail.com</a>
      </div>

      <!-- LinkedIn链接 -->
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        <a href="https://linkedin.com/in/felicity-fenglyu-liu" target="_blank" rel="noopener" class="text-blue-600 dark:text-blue-400 hover:underline">LinkedIn</a>
      </div>

      <!-- 简历按钮 -->
      <div class="pt-4">
        <a href="/Resume-UXR-FelicityLiu.pdf" target="_blank" rel="noopener" 
           class="inline-flex items-center gap-2 rounded-full border border-black/10 dark:border-white/10 px-4 py-2 hover:bg-black/5 dark:hover:bg-white/10 transition-colors duration-200">
          <span>View Resume</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
</section>
</BaseLayout>

