---
const { title, subtitle } = Astro.props
---

<div class="project-hero">
  <div class="hero-content">
    <!-- Main Title -->
    <h1 class="hero-title">
      {title}
    </h1>
    
    <!-- Subtitle -->
    {subtitle && (
      <p class="hero-subtitle">
        {subtitle}
      </p>
    )}
  </div>
</div>

<style>
  .project-hero {
    padding: 3rem 0 2rem 0;
    margin-bottom: 2rem;
  }
  
  .hero-content {
    max-width: none;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.3;
    color: #111827;
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.05em;
    text-align: center;
  }
  
  .dark .hero-title {
    color: #f9fafb;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #6b7280;
    margin: 0 auto;
    max-width: 65ch;
    text-align: center;
  }
  
  .dark .hero-subtitle {
    color: #9ca3af;
  }
  
  @media (max-width: 768px) {
    .project-hero {
      padding: 2rem 0 1.5rem 0;
    }
    
    .hero-title {
      font-size: 2.25rem;
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
  }
</style>
