---
const { title, subtitle, slug } = Astro.props
---

<div class={`project-hero ${slug === 'referral-research' ? 'referral-hero' : slug === 'annual-satisfaction' ? 'satisfaction-hero' : slug === 'growth-tactics' ? 'growth-hero' : slug === 'RAI-product' ? 'rai-hero' : ''}`}>
  <div class="hero-content">
    <!-- Main Title -->
    <h1 class="hero-title">
      {title}
    </h1>
    
    <!-- Subtitle -->
    {subtitle && (
      <p class="hero-subtitle">
        {subtitle}
      </p>
    )}
    
    <!-- Stats for referral project -->
    {slug === 'referral-research' && (
      <div class="hero-stats-inline">
        <div class="stat-item">
          <span class="stat-number">120K</span>
          <span class="stat-label">Users Exposed</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">0.78%</span>
          <span class="stat-label">Conversion Rate</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">+20%</span>
          <span class="stat-label">Improvement</span>
        </div>
      </div>
    )}
    
    <!-- Stats for annual satisfaction project -->
    {slug === 'annual-satisfaction' && (
      <div class="hero-stats-inline">
        <div class="stat-item">
          <span class="stat-number">2,266</span>
          <span class="stat-label">Survey Responses</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">4.10</span>
          <span class="stat-label">Satisfaction Score</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">94.1%</span>
          <span class="stat-label">Valid Rate</span>
        </div>
      </div>
    )}
    
    <!-- Stats for growth tactics project -->
    {slug === 'growth-tactics' && (
      <div class="hero-stats-inline">
        <div class="stat-item">
          <span class="stat-number">14</span>
          <span class="stat-label">Deep Interviews</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">6</span>
          <span class="stat-label">Barriers Identified</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">3</span>
          <span class="stat-label">Actionable Solutions</span>
        </div>
      </div>
    )}
    
    <!-- Stats for RAI product project -->
    {slug === 'RAI-product' && (
      <div class="hero-stats-inline">
        <div class="stat-item">
          <span class="stat-number">6</span>
          <span class="stat-label">Months Development</span>
        </div>
        <div class="stat-item">
          <span class="stat-number text-stat">Full-Stack</span>
          <span class="stat-label">Product Solution</span>
        </div>
        <div class="stat-item">
          <span class="stat-number text-stat">AI Safety</span>
          <span class="stat-label">Focus Area</span>
        </div>
      </div>
    )}
    
    <!-- Project Meta Info -->
    {slug === 'referral-research' && (
      <div class="hero-meta">
        <div class="meta-item">
          <strong>Role:</strong> UX Researcher
        </div>
        <div class="meta-item">
          <strong>Timeline:</strong> 2 months (Jan-Feb 2022)
        </div>
      </div>
    )}
    
    <!-- Project Meta Info for annual satisfaction -->
    {slug === 'annual-satisfaction' && (
      <div class="hero-meta">
        <div class="meta-item">
          <strong>Role:</strong> UX Researcher
        </div>
        <div class="meta-item">
          <strong>Timeline:</strong> 2 months (Feb-Mar 2022)
        </div>
      </div>
    )}
    
    <!-- Project Meta Info for growth tactics -->
    {slug === 'growth-tactics' && (
      <div class="hero-meta">
        <div class="meta-item">
          <strong>Role:</strong> UX Researcher
        </div>
        <div class="meta-item">
          <strong>Timeline:</strong> 2 months (Jun-Jul 2023)
        </div>
      </div>
    )}
    
    <!-- Project Meta Info for RAI product -->
    {slug === 'RAI-product' && (
      <div class="hero-meta">
        <div class="meta-row">
          <div class="meta-item">
            <strong>Role:</strong> Product Manager
          </div>
          <div class="meta-item">
            <strong>Timeline:</strong> 6 months (Sept 2024â€“Mar 2024)
          </div>
        </div>
        <div class="meta-row">
          <div class="meta-item">
            <strong>Sponsored by:</strong> Responsible Innovation Lab
          </div>
          <div class="meta-item">
            <strong>Teammates:</strong> Freya Yu, Krant Li, Moni Huang
          </div>
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .project-hero {
    padding: 3rem 0 2rem 0;
    margin-bottom: 2rem;
  }
  
  .referral-hero {
    background: linear-gradient(135deg, #FFC800 0%, #FF232A 100%);
    color: white;
    padding: 4rem 2rem;
    margin: 0 -2rem 2rem -2rem;
    border-radius: 0 0 24px 24px;
  }
  
  .satisfaction-hero {
    background: linear-gradient(135deg, #F98207 0%, #E5181F 100%);
    color: white;
    padding: 4rem 2rem;
    margin: 0 -2rem 2rem -2rem;
    border-radius: 0 0 24px 24px;
  }
  
  .growth-hero {
    background: linear-gradient(135deg, #00FFF2 0%, #FF0033 100%);
    color: white;
    padding: 4rem 2rem;
    margin: 0 -2rem 2rem -2rem;
    border-radius: 0 0 24px 24px;
  }
  
  .rai-hero {
    background: linear-gradient(90deg, #ECF8FF 0%, #D8E4FF 100%);
    color: #1e4a9a;
    padding: 4rem 2rem;
    margin: 0 -2rem 2rem -2rem;
    border-radius: 0 0 24px 24px;
  }
  
  .hero-content {
    max-width: none;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.3;
    color: #111827;
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.05em;
    text-align: center;
  }
  
  .referral-hero .hero-title {
    color: white;
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }
  
  .satisfaction-hero .hero-title {
    color: white;
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }
  
  .growth-hero .hero-title {
    color: white;
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }
  
  .rai-hero .hero-title {
    background: linear-gradient(90deg, #4E7EDC 0%, #C86492 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }
  
  .dark .hero-title {
    color: #f9fafb;
  }
  
  .dark .rai-hero .hero-title {
    background: linear-gradient(90deg, #60a5fa 0%, #f472b6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #6b7280;
    margin: 0 auto 2rem auto;
    max-width: 65ch;
    text-align: center;
  }
  
  .referral-hero .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .satisfaction-hero .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .growth-hero .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .rai-hero .hero-subtitle {
    color: #4a5568;
    font-size: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .dark .hero-subtitle {
    color: #9ca3af;
  }
  
  /* Hero Stats Inline */
  .hero-stats-inline {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-item .stat-number {
    font-size: 3rem;
    font-weight: 700;
    display: block;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .rai-hero .stat-item .stat-number {
    color: #4E7EDC;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .rai-hero .stat-item .stat-number.text-stat {
    font-size: 2.2rem;
  }
  
  .stat-item .stat-label {
    font-size: 0.9rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .rai-hero .stat-item .stat-label {
    color: #6b7280;
  }
  
  .hero-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
    justify-content: center;
    font-size: 0.9rem;
    opacity: 0.9;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .rai-hero .hero-meta {
    color: #4a5568;
  }
  
  .meta-row {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .meta-item strong {
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .project-hero {
      padding: 2rem 0 1.5rem 0;
    }
    
    .referral-hero {
      padding: 3rem 1rem;
      margin: 0 -1rem 2rem -1rem;
    }
    
    .satisfaction-hero {
      padding: 3rem 1rem;
      margin: 0 -1rem 2rem -1rem;
    }
    
    .growth-hero {
      padding: 3rem 1rem;
      margin: 0 -1rem 2rem -1rem;
    }
    
    .rai-hero {
      padding: 3rem 1rem;
      margin: 0 -1rem 2rem -1rem;
    }
    
    .hero-title {
      font-size: 2.25rem;
    }
    
    .referral-hero .hero-title {
      font-size: 2.5rem;
    }
    
    .satisfaction-hero .hero-title {
      font-size: 2.5rem;
    }
    
    .growth-hero .hero-title {
      font-size: 2.5rem;
    }
    
    .rai-hero .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
    
    .referral-hero .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .satisfaction-hero .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .growth-hero .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .rai-hero .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .hero-stats-inline {
      gap: 2rem;
    }
    
    .stat-item .stat-number {
      font-size: 2rem;
    }
    
    .rai-hero .stat-item .stat-number {
      height: 2.5rem;
    }
    
    .rai-hero .stat-item .stat-number.text-stat {
      font-size: 1.6rem;
    }
  }
</style>
